<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewId"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">
            <ImageView
                android:id="@+id/iconCardView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                app:srcCompat="@drawable/ic_play_circle_filled_black_24dp"
                android:layout_alignParentLeft="true" />

            <!-- //////////////////////////
                        Primer Linear-Layout
                 ////////////////////////////-->
           <LinearLayout
               android:id="@+id/idLinearLayOut1"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_marginStart="4dp"
               android:layout_marginTop="2dp"
               android:layout_toEndOf="@+id/iconCardView"
               android:layout_marginLeft="4dp"
               android:layout_toRightOf="@+id/iconCardView"
               >
               <TextView
                   android:id="@+id/rv_text1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:text="proyecto:"/>
               <TextView
                   android:id="@+id/rv_text2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:text="transectos:"/>
           </LinearLayout>

            <!-- //////////////////////////
                        Segundo Linear-Layout
                 ////////////////////////////-->

           <LinearLayout
               android:id="@+id/idLinearLayOut"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_marginStart="4dp"
               android:layout_marginTop="2dp"
               android:layout_toEndOf="@+id/idLinearLayOut1"
               android:layout_marginLeft="4dp"
               android:layout_toRightOf="@+id/iconCardView"
               >
               <TextView
                   android:id="@+id/tv_rv_nombreProyecto"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:text="--"/>
               <TextView
                   android:id="@+id/tv_rv_transectos"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:text="--"/>
           </LinearLayout>

            <!-- //////////////////////////
                         tercer Linear-Layout
                  ////////////////////////////-->

           <LinearLayout
               android:id="@+id/idLinearLayOut3"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_marginStart="4dp"
               android:layout_marginTop="2dp"
               android:layout_toEndOf="@+id/idLinearLayOut"
               android:layout_marginLeft="4dp"
               android:layout_toRightOf="@+id/iconCardView"
               >
               <TextView
                   android:id="@+id/rv_text3"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:text="s:"/>
               <TextView
                   android:id="@+id/rv_text4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:text="D:"/>
           </LinearLayout>

            <!-- //////////////////////////
                       cuarto Linear-Layout
                 ////////////////////////////-->

           <LinearLayout
               android:id="@+id/idLinearLayOut4"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_marginStart="4dp"
               android:layout_marginTop="2dp"
               android:layout_toEndOf="@+id/idLinearLayOut3"
               android:layout_marginLeft="4dp"
               android:layout_toRightOf="@+id/iconCardView"
               >

               <TextView
                   android:id="@+id/tv_rv_riquesa"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:text="--"
                   android:textColor="@color/black"
                   android:textSize="14sp" />

               <TextView
                   android:id="@+id/tv_rv_densidad"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="2dp"
                   android:textColor="@color/black"
                   android:textSize="14sp"
                   android:text="--"/>
           </LinearLayout>


           <!--
           <TextView
               android:id="@+id/tv_rv_mmmm"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginEnd="6dp"
               android:layout_marginRight="6dp"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"
               android:textColor="@color/black"
               android:textSize="14sp"
               android:text="transectos"/> -->
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>